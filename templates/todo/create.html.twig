{% extends 'base.html.twig' %}

{% block title %}Ajout d'une todo
{% endblock %}

{% block body %}
	<h1 class="w-25 m-auto text-info text-center mb-5">Ajoute une todo Ã  ta liste !</h1>
	{{form_start(formView)}}
	{{form_errors(formView)}}
	<div class="form-group w-50 m-auto mt-5">
		{{form_label(formView.title)}}
		{{form_widget(formView.title, {'attr': {'class': 'form-control form-control-lg'}})}}
